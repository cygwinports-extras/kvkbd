inherit kde3

DESCRIPTION="KDE virtual keyboard"
HOMEPAGE="http://www.kde-apps.org/content/show.php/?content=56019"
SRC_URI="http://www.kde-apps.org/CONTENT/content-files/56019-${P}.tar.bz2"

DIFF_EXCLUDES="Makefile libtool"

src_compile() {
	cd ${S}
	rm -f Makefile config.{log,status} libtool */Makefile
	kde3_autoreconf
	cd ${B}
	kde3_compile
}
